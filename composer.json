{
	"name": "curtistinkers/disable-wp-health-checks-composer",
	"description": "Disables unnecessary health checks for Composer managed projects",
	"version": "2.0.0-dev",
	"type": "wordpress-muplugin",
	"keywords": [ "wordpress", "composer", "health-checks" ],
	"homepage": "https://github.com/curtistinkers/disable-wp-health-checks-composer",
	"license": "MIT",
	"authors": [
		{
			"name": "curtistinkers",
			"email": "curtistinkers.commit@gmail.com",
			"homepage": "https://curtistinkers.com",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/curtistinkers/disable-wp-health-checks-composer/issues",
		"source": "https://github.com/curtistinkers/disable-wp-health-checks-composer"
	},
	"require": {
		"php": ">=8.2"
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "^3.0",
		"phpstan/extension-installer": "^1.4",
		"phpstan/phpstan-strict-rules": "^2.0",
		"szepeviktor/phpstan-wordpress": "^2.0",
		"phpunit/phpunit": "^9.0",
		"phpunit/php-code-coverage": "^9.2"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"phpstan/extension-installer": true
		}
	},
	"scripts": {
		"phpcs": "phpcs",
		"phpcbf": "phpcbf",
		"phpunit": "phpunit",
		"phpstan": "phpstan analyse",
		"lint": "@phpcs",
		"lint:fix": "@phpcbf",
		"test": "@phpunit",
		"coverage": "@phpunit --coverage-text",
    "full-test": ["@lint", "@phpstan", "@test"]
	}
}
